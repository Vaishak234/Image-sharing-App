
<div class="row row-cols-1  row-cols-md-3 g-4  d-flex flex-column align-items-center m-4" >


<div class="container mt-4">
    <h3>User List</h3>
    <table class="table table-striped table-bordered" style="width: 800px;">
        <thead>
            <tr>
                <th>No</th>
                <th>User</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((user, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td>
                        <a href="/api/admin/edit/<%= user.id %>" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/api/admin/delete/<%= user.id %>" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
</div>
